{
  "compilerOptions": {
    "target": "ES2018",
    "module": "esnext",
    "lib": ["es2018", "DOM"],
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "experimentalDecorators": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["src/**/*"]
}
